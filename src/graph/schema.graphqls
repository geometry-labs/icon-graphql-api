# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Block {
  hash: String!
  number: Int!
  signature: String!
  item_id: String!
  transaction_count: Int!
  type: String!
  version: String!
  peer_id: String!
  merkle_root_hash: String!
  item_timestamp: String!
  parent_hash: String!
  timestamp: Int!
}

type Query {
  block(hash: String!): Block!
  blocks: [Block!]!
}
